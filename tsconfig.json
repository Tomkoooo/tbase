{
    "compilerOptions": {
      "target": "ES6",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "outDir": "./lib",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "declaration": true,
      "skipLibCheck": true,
      "emitDeclarationOnly": true,
      "allowImportingTsExtensions": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "lib"]
  }
  